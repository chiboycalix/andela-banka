{
  "name": "andela-banka",
  "version": "1.0.0",
  "description": "A light-weight Banking application",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require babel-core/register server/test/**/*.js --exit",
    "start": "nodemon bin/dev",
    "clean": "rm -rf dist",
    "build-dev": "npm run clean && mkdir dist && babel server -s -d dist && nodemon bin/dev",
    "build-prod": "npm run build-dev && nodemon bin/prod",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiboycalix/andela-banka.git"
  },
  "author": "Igwe Chinonso Abraham",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chiboycalix/andela-banka/issues"
  },
  "homepage": "https://github.com/chiboycalix/andela-banka#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  }
}
